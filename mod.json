{
    "geode": "5.0.0-alpha.1",
    "gd": {
        "win": "2.2081",
        "android": "2.2081",
        "mac": "2.2081",
        "ios": "2.2081"
    },
    "id": "cheeseworks.quickgameplayactions",
    "name": "Gameplay Shortcuts",
    "version": "1.0.4",
    "developers": [
        "Cheeseworks"
    ],
    "description": "Mobile-friendly UI for quick in-game actions.",
    "dependencies": {
        "geode.node-ids": {
            "importance": "required",
            "version": ">=1.21.0"
        }
    },
    "links": {
        "source": "https://github.com/BlueWitherer/QuickGameplayActions",
        "homepage": "https://www.cheeseworks.gay/",
        "community": "https://www.dsc.gg/cheeseworks"
    },
    "tags": [
        "offline",
        "gameplay",
        "enhancement"
    ],
    "settings": {
        "btns": {
            "type": "title",
            "name": "Shortcuts",
            "description": "The shortcuts you want to easily access in-game."
        },
        "restart": {
            "type": "bool",
            "name": "Restart Level",
            "description": "Create the button to instantly restart the level.",
            "default": true
        },
        "practice": {
            "type": "bool",
            "name": "Practice Mode",
            "description": "Create the button to quickly toggle Practice Mode.",
            "default": true
        },
        "pause": {
            "type": "bool",
            "name": "Pause Level",
            "description": "Create the button to pause the level.",
            "default": false
        },
        "exit": {
            "type": "bool",
            "name": "Exit Level",
            "description": "Create the button to instantly exit the level. <cr>This might break other mods' overlays!</c>",
            "default": false
        },
        "ui": {
            "type": "title",
            "name": "Interface",
            "description": "Customize your interface."
        },
        "scale": {
            "type": "float",
            "name": "Scale",
            "description": "Scale the menu.",
            "default": 0.875,
            "min": 0.5,
            "max": 2.5,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 0.125,
                "arrows": true,
                "arrow-step": 0.25,
                "big-arrows": true,
                "big-arrow-step": 0.5
            }
        },
        "opacity": {
            "type": "int",
            "name": "Opacity",
            "description": "Change the opacity of the menu.",
            "default": 200,
            "min": 25,
            "max": 255,
            "control": {
                "input": true,
                "slider": true,
                "slider-step": 1,
                "arrows": true,
                "arrow-step": 10,
                "big-arrows": true,
                "big-arrow-step": 20
            }
        },
        "conditions": {
            "type": "title",
            "name": "Conditions",
            "description": "When the action menu will function."
        },
        "toggle-press": {
            "type": "bool",
            "name": "Toggle on Press",
            "description": "Toggle the visibility of the menu when pressing the drag button without moving it.",
            "default": true
        }
    },
    "early-load": false
}